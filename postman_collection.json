{
  "info": {
    "name": "PGold Assessment API",
    "description": "Complete API collection for PGold crypto and gift card trading backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api/v1",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"johndoe\",\n  \"email\": \"john@example.com\",\n  \"full_name\": \"John Doe\",\n  \"phone_number\": \"08012345678\",\n  \"referral_code\": \"REF123\",\n  \"heard_from\": \"Facebook\",\n  \"password\": \"Password123\",\n  \"password_confirmation\": \"Password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/register",
              "host": ["{{base_url}}"],
              "path": ["register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", jsonData.token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"Password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": ["{{base_url}}"],
              "path": ["login"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/logout",
              "host": ["{{base_url}}"],
              "path": ["logout"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/profile",
              "host": ["{{base_url}}"],
              "path": ["profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Email Verification",
      "item": [
        {
          "name": "Send Verification Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/verify-email",
              "host": ["{{base_url}}"],
              "path": ["verify-email"]
            }
          }
        },
        {
          "name": "Confirm Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"code\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/confirm-email",
              "host": ["{{base_url}}"],
              "path": ["confirm-email"]
            }
          }
        },
        {
          "name": "Resend Verification Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/resend-verification",
              "host": ["{{base_url}}"],
              "path": ["resend-verification"]
            }
          }
        }
      ]
    },
    {
      "name": "Biometric Setup",
      "item": [
        {
          "name": "Enable Face ID",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"enabled\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/enable-face-id",
              "host": ["{{base_url}}"],
              "path": ["enable-face-id"]
            }
          }
        },
        {
          "name": "Enable Fingerprint",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"enabled\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/enable-fingerprint",
              "host": ["{{base_url}}"],
              "path": ["enable-fingerprint"]
            }
          }
        },
        {
          "name": "Setup Biometrics (Generic)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"face_id\",\n  \"enabled\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/setup-biometrics",
              "host": ["{{base_url}}"],
              "path": ["setup-biometrics"]
            }
          }
        }
      ]
    },
    {
      "name": "Homepage",
      "item": [
        {
          "name": "Get Homepage Data",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/home",
              "host": ["{{base_url}}"],
              "path": ["home"]
            }
          }
        }
      ]
    },
    {
      "name": "Rates",
      "item": [
        {
          "name": "Get All Crypto Rates",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/rates/crypto",
              "host": ["{{base_url}}"],
              "path": ["rates", "crypto"]
            }
          }
        },
        {
          "name": "Get All Gift Card Rates",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/rates/gift-cards",
              "host": ["{{base_url}}"],
              "path": ["rates", "gift-cards"]
            }
          }
        },
        {
          "name": "Get All Rates",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/rates",
              "host": ["{{base_url}}"],
              "path": ["rates"]
            }
          }
        },
        {
          "name": "Calculate Crypto Rate",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"BTC\",\n  \"amount\": 0.5\n}"
            },
            "url": {
              "raw": "{{base_url}}/calculate/crypto",
              "host": ["{{base_url}}"],
              "path": ["calculate", "crypto"]
            }
          }
        },
        {
          "name": "Calculate Gift Card Rate",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"AMAZON_USD\",\n  \"amount\": 100\n}"
            },
            "url": {
              "raw": "{{base_url}}/calculate/gift-card",
              "host": ["{{base_url}}"],
              "path": ["calculate", "gift-card"]
            }
          }
        }
      ]
    }
  ]
}
